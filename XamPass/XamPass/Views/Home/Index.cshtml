    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.12.4/css/bootstrap-select.min.css">
    <!-- Latest compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.12.4/js/bootstrap-select.min.js"></script>
</head>

<body>
    <h1>Home</h1>

    <table>
        <tr>
            <td width="80%">
                <div id="caption">
                    <h3>Suche</h3>
                </div>
            </td>
            <td>
                <div id="newEntry">
                    <h3>Neuer Eintrag</h3>
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div id="searchTable" style="width:80%;">
                    <table width="100%">
                        <tr>
                            <td class="input-cell-name">
                                Fachrichtung
                            </td>
                            <td>
                                <input id="inputCourseOfStudy" class="form-control col-md-2 input-cell" />
                            </td>
                        </tr>
                        <tr>
                            <td class="input-cell-name">
                                Fach
                            </td>
                            <td>
                                <input id="inputSubjectOfStudy" class="form-control col-md-2 input-cell" />
                            </td>
                        </tr>
                        <tr>
                            <td class="input-cell-name">
                                Land
                            </td>
                            <td>
                                <input id="inputCounty" readonly="true" value="Deutschland" class="form-control col-md-2 input-cell" />
                            </td>
                        </tr>
                        <tr>
                            <td class="input-cell-name">
                                Bundesland
                            </td>
                            <td>
                                <select id="inputState" list="states" class="form-control col-md-2 dropdown-toggle input-cell" style="padding-left:10px;" />
                                <datalist id="states">
                                    <option value="Sachsen-Anhalt"> Sachsen-Anhalt </option>
                                    <option value="Sachsen"> Sachsen</option>
                                    <option value="Bayern">Bayern </option>
                                </datalist>
                            </td>
                        </tr>
                        <tr>
                            <td class="input-cell-name">
                                Universität
                            </td>
                            <td>
                                <select id="inputUni" list="unis" class="form-control col-md-2 dropdown-toggle input-cell" style="padding-left:10px;" />
                                <datalist id="unis">
                                    <option value="BA Leipzig"> BA Leipzig </option>
                                    <option value="HTWK"> HTWK </option>
                                </datalist>
                                @*<input id="inputUni" class="form-control col-md-2 input-cell" />*@
                            </td>
                        </tr>
                        <tr>
                            <td class="input-cell-name">
                                Schlüsselwörter
                            </td>
                            <td>
                                <input id="inputKeywords" class="form-control col-md-2 input-cell" />
                            </td>
                        </tr>
                    </table>

                    <div width="100%" style="text-align:center;">
                        <button id="submitBtn" type="button" class="btn">Suchen</button>
                    </div>
                </div>
            </td>
            <td style="display:inline-block;">
                <button id="newEntryBtn" class="btn" >Neuen Eintrag anlegen</button>
            </td>
        </tr>
    </table>




</body>

