@model XamPass.Models.ViewModels.ViewModelCreateUniversity

@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["CreateNewUniversity"].Value;
}

<head>
    <link rel="stylesheet" href="~/css/create.css" />

    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <link rel="stylesheet" href="/resources/demos/style.css">
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.12.4/css/bootstrap-select.min.css">
    <!-- Latest compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.12.4/js/bootstrap-select.min.js"></script>
</head>

<body>
    <h1>@Localizer["CreateNewUniversity"]</h1>

    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="container container-ext">
            <div class="row">
                <div class="col-md-4 form-something-new">
                    <div class="form-group">
                        <label asp class="control-label">@Localizer["UniversityName"]</label>
                        <input asp-for="@Model.UniversityName" class="form-control" />
                        <span asp-validation-for="@Model.UniversityName" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4 form-something-new">
                    <div class="form-group">
                        <label asp class="control-label">@Localizer["FederalStateName"]</label>
                        @Html.DropDownListFor(m => m.FederalStateId, Model.FederalStates, Localizer["SelectFederalState"].Value, new
                        {
                            @class = "form-control dropdown-toggle"
                        })
                        <span asp-validation-for="@Model.FederalStateId" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="text-left col-md-2 create-something-new">
                    <input type="submit" value=@Localizer["CreateUniversity"] class="btn btn-default" style="width:100%"
                           formaction=@Url.Action("SaveNewUniversity", "Home") />
                </div>
                <div class="text-left col-md-2 cancel-something-new">
                    <input type="submit" value=@Localizer["Cancel"] class="btn btn-default" style="width:100%" formaction=@Url.Action("CancelNewField", "Home") />
                </div>
            </div>
        </div>
    </form>
</body>


