@model XamPass.Models.DataBaseModels.DtSubject

@{
    ViewData["Title"] = "Create Subject";
}

<h2>Neues Studienfach anlegen</h2>
<hr />
<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label asp class="control-label">Name des Fachs</label>
                    <input asp-for="@Model.SubjectName" class="form-control" />
                    <span asp-validation-for="@Model.SubjectName" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="text-left col-md-2">
                <div class="form-group">
                    <input type="submit" value="Fach erstellen" class="btn btn-default"
                           formaction=@Url.Action("SaveNewSubject", "Home") />
                </div>
            </div>
            <div class="text-left col-md-2">
                <div class="form-group">
                    <input type="submit" value="Abbrechen" class="btn btn-default" formaction=@Url.Action("CancelNewField", "Home") />
                </div>
            </div>
        </div>
    </div>
</form>



